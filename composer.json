{
    "name": "battis/hydratable",
    "description": "Hydrate serialized objects with defaults and overrides",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Seth Battis",
            "email": "seth@battis.net"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "autoload": {
        "psr-4": {
            "Battis\\Hydratable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Battis\\Hydratable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./tools/phpunit --coverage-text --coverage-html=coverage",
        "docs": "./tools/phpdocumentor -d src -t docs"
    }
}
